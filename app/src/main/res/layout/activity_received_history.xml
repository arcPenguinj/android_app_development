<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_realtime_database"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCCCCC"
        android:padding="3dp"
        android:id="@+id/dataAddLayout"
        android:orientation="vertical">

    </LinearLayout>



    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:shrinkColumns="2"
        android:id="@+id/tableLayout"
        android:layout_below="@id/dataAddLayout">

    <TableRow android:id="@+id/tableRow">

        <TextView
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:text="@string/usernames"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:layout_conversion_absoluteHeight="30dp"
            tools:layout_conversion_absoluteWidth="0dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="6dp" />

        <TextView
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/emoji_sent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:layout_conversion_absoluteHeight="30dp"
            tools:layout_conversion_absoluteWidth="105dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="6dp" />



    </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/user1 "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/sent1"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:textAppearance="?android:attr/textAppearanceLarge" />



        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/user2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/sent2"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:textAppearance="?android:attr/textAppearanceLarge" />



        </TableRow>

    </TableLayout>



</RelativeLayout>